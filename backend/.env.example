# Database PostgreSQL
# Format: postgres://user:password@host:port/database
DATABASE_URL=postgres://user:password@localhost:5432/droitguineen

# Meilisearch Configuration
SEARCH_URL=http://localhost:7700
# IMPORTANT: Generate a strong master key for production
# Example: openssl rand -base64 32
MEILI_MASTER_KEY=your-secure-master-key-here

# Server Configuration
PORT=4000
NODE_ENV=development
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800

# Google Cloud Vision Configuration (Optional)
# Set to false if not using Google Cloud Vision OCR
GOOGLE_CLOUD_VISION_ENABLED=false
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=./config/google.json
GOOGLE_VISION_MONTHLY_LIMIT=1000
